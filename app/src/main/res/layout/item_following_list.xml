<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="@color/searchbar_color"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/following_girl" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratmedium"
                    android:maxLines="1"
                    android:text="pranshi gems"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratmedium"
                    android:text="@string/pranshi_2000"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btn_follow"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_lightblue"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="center"
                    android:text="@string/follow"
                    android:textSize="10dp"
                    android:visibility="visible" />

                <!--                <Button-->
                <!--                    android:id="@+id/btn_follow2"-->
                <!--                    android:layout_width="80dp"-->
                <!--                    android:layout_height="30dp"-->
                <!--                    android:layout_gravity="center_vertical"-->
                <!--                    android:background="@drawable/shape_following"-->
                <!--                    android:fontFamily="@font/montserratregular"-->
                <!--                    android:gravity="center"-->
                <!--                    android:text="@string/following"-->
                <!--                    android:textSize="10dp"-->
                <!--                    android:visibility="gone" />-->

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</layout>